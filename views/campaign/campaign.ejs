<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/sidebar.ejs') %>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% campaign.forEach(function(val){ %>
        <div class="card" style="width: 18rem;">
          <a href=<%= "/admin/campaign-edit/"+val._id %> >
          <img src=<%= val.image != '' ? val.image : "/image/campaign/c1.jpg"%> class="card-img-top" alt="...">
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= val.name %></h5>
            <p class="card-text"><%= val.desc %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Số tiền hiện tại: <%= val.raise %></li>
            <li class="list-group-item">Mục tiêu đề ra: <%= val.goal %></li>
            <li class="list-group-item">Tiến độ: 5%</li>
          </ul>
          <div class="card-body">
            <a href=<%= "/admin/campaign-delete/"+val._id %> class="fa fa-solid fa-trash"></a>
          </div>
        </div>
<% }) %>
        <div class="col-lg-12 ">
          
          
        </div>
      </div>
    <%- include('../includes/end.ejs') %>
</body>
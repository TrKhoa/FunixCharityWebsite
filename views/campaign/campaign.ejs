<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/sidebar.ejs') %>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% campaign.forEach(function(val){ %>
        <div class="card" style="width: 18rem;">
          <a href=<%= "/admin/campaign-edit/"+val._id %> >
          <img src=<%= val.image != '' ? val.image : "/image/campaign/c1.jpg"%> class="card-img-top" alt="...">
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= val.name %></h5>
            <p class="card-text"><%= val.desc %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Số tiền hiện tại: <%= val.raise %></li>
            <li class="list-group-item">Mục tiêu đề ra: <%= val.goal %></li>
            <li class="list-group-item">Tiến độ: 5%</li>
          </ul>
          <div class="card-body">
            <div class="fa fa-solid fa-trash" data-bs-toggle="modal" data-bs-target=<%= "#modal-"+val._id %>></div>
          </div>
        </div>

        <div class="modal fade" id=<%= "modal-"+val._id %> tabindex="-1" aria-labelledby="label" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="label">Thông báo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Bạn có muốn xóa chiến dịch:<br /> <%= val.name %>
              </div>
              <div class="modal-footer">
                <a href=<%= "/admin/campaign-delete/"+val._id %>>
                  <button type="button" class="btn btn-primary">Xóa</button></a>
              </div>
            </div>
          </div>
        </div>
<% }) %>
        <div class="col-lg-12 ">
          
          
        </div>
      </div>
    <%- include('../includes/end.ejs') %>
</body>
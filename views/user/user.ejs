<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/sidebar.ejs') %>
    <!--báo lỗi-->
    <% if(errorMessage != ""){ %>
      <div class="alert alert-primary" role="alert">
        <%= errorMessage %>
      </div>
    <% } %>
    <form action="/admin/user/search" method="post" class="col-12 col-lg-auto mb-3 mb-lg-3 me-lg-3" role="search">
      <input type="search" name="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
    </form>
    <div class="row">
        <div class="col-lg-12">
          <form action="/admin/user-delete?delete=true" method="POST">
            <table class="table">

              <!--Thanh chức năng-->
              <tr>
                <div class="text-start">Sắp xếp theo: <a href="/admin/user">Username</a> / <a href="/admin/user?byPhone=true">Phone</a> | Tác vụ: <span data-bs-toggle="modal" data-bs-target='#deleteAll'>Xóa</span></div>
              </tr>

              <!--Tiêu đề-->
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Tên tài khoản</th>
                  <th scope="col">Trạng thái</th>
                  <th scope="col" class="d-none d-md-table-cell">Tên người dùng</th>
                  <th scope="col" class="d-none d-md-table-cell">Email</th>
                  <th scope="col" class="d-none d-md-table-cell">SDT</th>
                  <th scope="col">Chức năng</th>
                  <th scope="col"></th>
                </tr>
              </thead>

              <!--Nội dung-->
              <tbody class="table-group-divider">
                <% user.forEach(function(val){%>
                  <tr>
                    <th scope="row"><% if(val.status < 3 && isOnline(val.username) === 'offline'){ %><input name="username" type="checkbox" value=<%= val.username %> /><%}%></th>
                    <td><img src=<%= val.image !== '' ? val.image :"/image/user/default.png" %> height="40"> <%= val.username %></td>
                    <td><%= isOnline(val.username) %></td>
                    <td class="d-none d-md-table-cell"><%= val.name %></td>
                    <td class="d-none d-md-table-cell"><%= val.email %></td>
                    <td class="d-none d-md-table-cell"><%= val.phone %></td>
                    <td><%= val.status===3 ? 'admin' : val.status===2 ? 'semi-admin' : 'user'%></td>
                    <td>
                      <a href=<%= "/admin/user-passwordGen/"+val.username %>><i class="fa-solid fa-key" ></i></a>
                      <a href=<%= "/admin/user-edit/"+val.username %> class="fa-solid fa-pen-to-square"> </a> 
                      <div class="fa fa-solid fa-trash" data-bs-toggle="modal" data-bs-target=<%= "#"+val.username %>></div>
                    </td>
                  </tr>

                  <!--Thông báo-->
                  <div class="modal fade" id=<%= val.username %> tabindex="-1" aria-labelledby="label" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="label">Thông báo</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        
                        <div class="modal-body">
                          <%= isOnline(val.username) == "online" ? "Tài khoản hiện đang online nên bạn không thể xóa" : val.status !== 3 ? "Bạn có chắc muốn xóa User: "+val.username : "Không thể xóa User là Admin" %>
                        </div>
                        
                        <div class="modal-footer">
                          <% if(val.status !== 3 && isOnline(val.username) == "offline" ) { %>
                          <a href=<%= "/admin/user-delete/"+val.username %>>
                            <button type="button" class="btn btn-primary">Xóa</button>
                          </a>
                          <% } else { %>
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Trở lại</button>
                        <% } %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!--Thông báo xóa User hàng loạt-->
                  <div class="modal fade" id="deleteAll" tabindex="-1" aria-labelledby="label" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="label">Thông báo</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        
                        <div class="modal-body">
                          Bạn muốn xóa hàng hoạt User?
                        </div>
                        
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Xóa</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <%}) %>

              </tbody>
            </table>
            <div class="col-lg-12 d-flex justify-content-center">
              <ul class="pagination">
                <% if(page > 1 ) { %>
                <li class=page-item">
                  <a href=<%= search ? "/admin/user/search?page=1" : "/admin/user?page=1" %>
                    <span class="page-link">Trang đầu</span>
                  </a>
                </li>
    
                <% } else { %>
                  <li class=page-item">
                     <span class="page-link text-secondary">Trang đầu</span>
                  </li>
                <% } %>
    
                  <% if(page > 1) { %>
                  <li class="page-item"><a class="page-link" href=<%= search ? ("/admin/user/search?page="+(parseInt(page)-1)) : ("/admin/user?page="+(parseInt(page)-1)) %>><%= page-1 %></a></li>
                  <% } %>
                  <li class="page-item active" aria-current="page"><a class="page-link" href=<%= search ? ("/admin/user/search?page="+page) : "/admin/user?page="+page %>><%= page %></a></li>
                  <% if(nextPage) { %>
                  <li class="page-item"><a class="page-link" href=<%= search ? ("/admin/user/search?page="+(parseInt(page)+1)) : "/admin/user?page="+(parseInt(page)+1) %>><%= page+1 %></a></li>
                  <% } %>
    
                <% if(nextPage) { %>
                  <li class="page-item">
                    <a href=<%= search ? ("/admin/user/search?page="+lastPage) : ("/admin/user?page="+lastPage) %>>
                      <span class="page-link">Trang cuối</span>
                    </a>
                  </li>
                  <% } else { %>
                    <li class="page-item">
                       <span class="page-link text-secondary">Trang cuối</span>
                    </li>
                  <% } %>
              </ul>
            </div>
          </form>
        </div>
      </div>
    <%- include('../includes/end.ejs') %>
</body>
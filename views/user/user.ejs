<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/sidebar.ejs') %>
    
    <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Tên tài khoản</th>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Email</th>
                <th scope="col">Chức năng</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% user.forEach(function(val){%>
                <tr>
                  <th scope="row">1</th>
                  <td><img src="/image/user/default.png" height="40"></td>
                  <td><%= val.username %></td>
                  <td><%= val.name %></td>
                  <td><%= val.email %></td>
                  <td><%= val.status===3 ? 'admin' : 'user'%></td>
                  <td><a href=<%= "/admin/user-edit/"+val.username %> class="fa-solid fa-pen-to-square"> </a> <div class="fa fa-solid fa-trash" data-bs-toggle="modal" data-bs-target=<%= "#"+val.username %>></div></td>
                </tr>

                <div class="modal fade" id=<%= val.username %> tabindex="-1" aria-labelledby="label" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="label">Thông báo</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      
                      <div class="modal-body">
                        <%= val.status !== 3 ? "Bạn có chắc muốn xóa User: "+val.username : "Không thể xóa User là Admin" %>
                      </div>
                      
                      <div class="modal-footer">
                        <% if(val.status !== 3) { %>
                        <a href=<%= "/admin/user-delete/"+val.username %>>
                          <button type="button" class="btn btn-primary">Xóa</button>
                        </a>
                        <% } else { %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Trở lại</button>
                      <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                <%}) %>

            </tbody>
          </table>
        </div>
      </div>
    <%- include('../includes/end.ejs') %>
</body>
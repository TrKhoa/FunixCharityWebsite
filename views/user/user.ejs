<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/sidebar.ejs') %>
    
    <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Tên tài khoản</th>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Chức năng</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% user.forEach(function(val){%>
                <tr>
                  <th scope="row">1</th>
                  <td><img src="/image/user/default.png" height="40"></td>
                  <td><%= val.username %></td>
                  <td><%= val.name %></td>
                  <td><%= val.status===3 ? 'admin' : 'user'%></td>
                  <td><a href=<%= "/admin/user-edit/"+val.username %> class="fa-solid fa-pen-to-square"> </a> <a href=<%= "/admin/user-delete/"+val.username %> class="fa fa-solid fa-trash"></a></td>
                </tr>
                <%}) %>

            </tbody>
          </table>
        </div>
      </div>
    <%- include('../includes/end.ejs') %>
</body>